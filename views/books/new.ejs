<% layout('layout/boilerplate')%>

<div class="container d-flex justify-content-center align-items-center mt-5">

 <div id="sign-form" class="card" style="width: 42%;">
	 <div class="card-header text-center">
       <h1>Añade libro</h1>      
    </div>  <!-- end card-header -->
	
	<div class="card-body">
		<form action="/books" method="POST" >
          <div class="mb-3">
            <label for="title">Título</label>
            <input type="text" class="form-control" name="book[title]" id="title" required>	  
          </div>
          <div class="mb-3">
            <label for="subtitle">Subtítulo</label>	        
			<textarea class="form-control" type="text" id="subtitle" name="book[subtitle]" style="height: 100px" required></textarea>  
         </div>			
         <div class="mb-3">
           <label for="image" >Imagen</label>
           <input type="text" class="form-control" name="book[image]" placeholder="Url" id="image">
         </div>	
						
         <div class="mb-3">
           <label for="plot">Trama</label>	      
		   <textarea class="form-control" type="text" id="plot" name="book[plot]" style="height: 100px" required></textarea>	 
         </div>
         <div class="mb-3">
           <label for="critique" >Crítica</label>	       
		   <textarea class="form-control" type="text" id="critique" name="book[critique]" style="height: 100px" required>                      </textarea>			 
         </div>
         <div class="mb-3">
           <label for="recommendation">Recomendación</label>
	       <textarea  class="form-control" type="text"  id="recommendation" name="book[recommendation]" style="height: 100px" required>
		   </textarea>
         </div>
		 	
         <div class="my-4">
           <label for="rating">Valoración</label>
		   <small class="text-muted">- Mínimo 1, Máximo 5</small>
	       <input type="range" class="form-control" name="book[rating]" id="rating" min="1" max="5" step="0.5"  required>	   	 
         </div>
		  	
         <div class="d-grid gap-2 my-5">
	       <button class="btn btn-lg">Enviar</button>
         </div>	
       </form>

        <a class="btn btn-sm" href="/books">Volver</a>
		
	</div> <!-- card-body -->
	
</div>
		
		<!-- </div> -->

</div> <!-- row -->
	

