<% layout('layout/boilerplate')%>

<div class="container d-flex justify-content-center align-items-center mt-5">
	
<div id="sign-form" class="card" style="width: 36%;">
	<div class="card-header text-center">
       <h1>Regístrate</h1>      
    </div>  <!-- end card-header -->	
	<div class="card-body">		
		<form action="/register" method="POST">			
		   <div class="mb-3"> 	
	          <label for="name" class="form-label"><i class="fa fa-user prefix grey-text me-1"></i> Nombre de usuario</label>
              <input type="text" id="name" class="form-control" name="username" required>			  
           </div> 	
           <div class="mb-3">				
	          <label for="inputEmail"><i class="fa fa-envelope prefix grey-text me-1"></i> Email</label>
              <input type="email" id="inputEmail" class="form-control" name="email" required>					 
            </div>  
            <div class="mb-3">
              <label for="password"><i class="fa fa-lock prefix grey-text me-1"></i> Password</label>
              <input type="password" class="form-control" name="password" id="password" required>
            </div>
			<div class="mb-3"> 	
	          <label for="adminCode" ><i class="fa fa-user prefix grey-text me-1"></i> Administrador</label>
              <input type="text" id="adminCode" class="form-control" name="adminCode">			  
           </div> 
            <div class="mb-3">
	          <button class="btn btn-md btn-block" type="submit">Regístrate</button>				 
            </div>
           	<hr>		  
            <p class="my-4 small">Si ya te has registrado: 
				<a class="btn btn-sm btn-info ms-2" href="/login">Inicia sesión</a>
			</p>
			<hr>
			 <!-- Social login -->
	        <div id="google" class="d-flex justify-content-start my-4">					
              <p>O inicia sesión con:</p>      
              <a type="button" href="/auth/google" class="btn-floating btn-google btn-sm ms-4 mb-2">
                 <i class="fab fa-google"></i>
              </a>
		    </div>
			
        </form>

        <a class="btn btn-sm" href="/">Volver</a>
		
	</div> <!-- card-body -->
	
</div>
		
		<!-- </div> -->

</div> <!-- row -->

		
		 
   





